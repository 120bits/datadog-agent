init_config:

instances:
    -
    ## @param unit_names - list of strings - required if unit_regexes is not set
    ## List of systemd units to monitor (full name e.g. ssh.service).
    ## Either `unit_names` or `unit_regexes` must be specified.
    #
    unit_names:
      - <UNIT_NAME>

    ## @param unit_regexes - list of strings - required if unit_names is not set
    ## Regex pattern[s] matching the names of units to monitor.
    ## Either `unit_names` or `unit_regexes` must be specified.
    #
    # unit_regexes:
    #   - ^<UNIT_NAME>$        # match exactly the unit name "<UNIT_NAME>"

    ## @param private_socket - string - optional
    ## Path to systemd private socket needed to retrieve systemd data.
    ## Defaults to `/run/systemd/private`.
    ## Defaults to `/host/run/systemd/private` when using Docker Agent (https://docs.datadoghq.com/agent/docker/).
    ##
    # private_socket: <PATH_TO_SYSTEMD_PRIVATE_SOCKET>

    ## @param tags  - list of key:value elements - optional
    ## List of tags to attach to every metric, event, and service check emitted by this integration.
    ##
    ## Learn more about tagging at https://docs.datadoghq.com/tagging
    #
    # tags:
    #   - <KEY_1>:<VALUE_1>
    #   - <KEY_2>:<VALUE_2>
